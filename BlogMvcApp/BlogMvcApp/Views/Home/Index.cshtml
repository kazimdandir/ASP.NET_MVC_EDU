@model IEnumerable<BlogMvcApp.Models.BlogModel>
@{
    ViewBag.Title = "Index";
}

<h2>Blog Listesi</h2>



@foreach (var blog in Model)
{
    <div class="blogitem">
        <h3 class="page-header">
            @blog.Title
        </h3>
        <p>
            <span class="glpyicon glpyicon-time"></span>
            @blog.DateOfUpload
        </p>
        <hr />
        <img class="img-responsive" src="http://placehold.it/900x300" />
        <hr />
        <p>
            @blog.Description
        </p>
        @Html.ActionLink("Daha Fazla", "Details", "Blog", new { id = @blog.Id }, new { @class = "btn btn-primary" })
    </div>
}

