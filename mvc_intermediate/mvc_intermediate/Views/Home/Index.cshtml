@using mvc_intermediate.Models

@model List<Urun>
@{
    ViewBag.Title = "Index";
}

<h2>Ürünler</h2>
<hr />

<div class="alert alert-success" role="alert">
    <strong>@ViewBag.UrunSayisi</strong> adet ürün listelendi.
</div>

<hr />

<div class="row">

    <div class="col-md-3">
        <div class="list-group">
            @foreach (var kategori in (List<Kategori>)ViewBag.Kategoriler)
            {
                <a href="#" class="list-group-item">@kategori.KategoriAdi</a>
            }
        </div>
    </div>

    <div class="col-md-9">
        @foreach (var urun in Model)
        {
            if (urun.Satistami == true)
            {
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="https://placehold.co/350x150" alt="..." />
                        <div class="caption">
                            <h3>@urun.UrunAdi</h3>
                            <p>
                                @if (urun.Aciklama.Length > 50)
                                {
                                    @(urun.Aciklama.Substring(0, 47) + "...")
                                }
                                else
                                {
                                    @urun.Aciklama
                                }
                            </p>
                            <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-primary" role="button">Button</a></p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>